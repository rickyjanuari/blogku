	<div id="post_show_content" class="skinny_wrapper wrapper_padding">
		<header>
			<p class="date"><%= @post.created_at.strftime('%A, %B %d') %></p>
			<h2><%= @post.title %></h2>
			<hr>
		</header>

		<div id="content">
			<h2>Lorem Ipsum</h2>
			<%= markdown @post.content %>
			<hr>
		</div>

		<div id="share_box">
			<p>Share <%= @post.title %></p>
			<a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by @rickyjanuari - &amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
			<i class="fa fa-twitter">
			</i>
			</a>
			<a onclick="javascript:window.open('http://www.facebook.com/share.php?url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
			<i class="fa fa-facebook">
			</i>
			</a>
			<a onclick="javascript:window.open('http://plus.google.com/share?url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
			<i class="fa fa-google-plus">
			</i>
			</a>
			<hr>
		</div>

		<hr>

		<%= render 'disqus' %>
		<%= link_to "Edit", edit_post_path(@post) %>

<%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are You sure you want to delete this post?"} %>
	</div>
	